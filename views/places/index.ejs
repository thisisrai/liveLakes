<% include ../partials/headers %>

<div class="container">
    <header class="jumbotron">
      <h1>Cool Places</h1>
      <p>Check out some new places!</p>
      <p>
        <a class="btn btn-primary btn-lrg " href="/places/new">Add a cool place!</a>
      </p>
    </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Have you visited these places?</h3>
    </div>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% places.forEach(place => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= place.url %>">
          <div class="caption">
            <h4><%= place.name %></h4>
          </div>
          <p>
            <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>