<% include ../partials/headers %>

<div class="container">  
  <div class="row">
    <h1 style="text-align: center;">Edit <%= place.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/places/<%= place._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="place[name]" value="<%= place.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="place[price]" value="<%= place.price%>" min="0" step="5">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="place[url]" value="<%= place.url%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="place[description]" value="<%= place.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block" >submit</button>
        </div>
      </form>
      <div style="text-align: center;">
        <a href="/places">Go Back</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>