<% include ../partials/headers %>

<div class="container">  
  <div class="row">
    <h1 style="text-align: center;">Add a New Place</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/places" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="price" min="0" step="5">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="url" placeholder="image url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Give us an awesome Description">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block" >submit</button>
        </div>
      </form>
      <div style="text-align: center;">
        <a href="/places">Go Back</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>