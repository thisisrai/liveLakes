<% include ../partials/headers %>

<div class="container">  
  <div class="row">
    <h1 style="text-align: center;">Add New Comment to <%= lake.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/lakes/<%= lake._id%>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block" >submit</button>
        </div>
      </form>
      <div style="text-align: center;">
        <a href="/lakes">Go Back</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>