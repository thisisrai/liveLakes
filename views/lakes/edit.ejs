<% include ../partials/headers %>

<div class="container">  
  <div class="row">
    <h1 style="text-align: center;">Edit <%= lake.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/lakes/<%= lake._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="lake[name]" value="<%= lake.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="lake[url]" value="<%= lake.url%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="lake[description]" value="<%= lake.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block" >submit</button>
        </div>
      </form>
      <div style="text-align: center;">
        <a href="/lakes">Go Back</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>