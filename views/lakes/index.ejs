<% include ../partials/headers %>

<div class="container">
    <header class="jumbotron">
      <h1>Live Lakes</h1>
      <p>Check out some wonderful lakes!</p>
      <p>
        <a class="btn btn-primary btn-lrg " href="/lakes/new">add new lakes</a>
      </p>
    </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular Lakes!</h3>
    </div>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% lakes.forEach(lake => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= lake.url %>">
          <div class="caption">
            <h4><%= lake.name %></h4>
          </div>
          <p>
            <a href="/lakes/<%= lake._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>