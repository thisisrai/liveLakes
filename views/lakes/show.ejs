<% include ../partials/headers %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">LiveLakes</p>
      <div class="list-group">
        <li class="list-group-item">Info 1</li>
        <li class="list-group-item active">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= lake.url %>" alt="">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href=""><%= lake.name %></a></h4>
          <p><%= lake.description %></p>
          <p><em>Submitted by <%= lake.author.username %></em></p>
          <% if ( currentUser && lake.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-warning" href="/lakes/<%= lake._id%>/edit">Edit</a>
          <form id="delete-form" action="/lakes/<%= lake._id%>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-primary" href="/lakes/<%= lake._id%>/comments/new">Add Comment</a>
        </div>
        <hr>
        <% lake.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
              <% if ( currentUser && comment.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-xs btn-warning" href="/lakes/<%= lake._id%>/comments/<%= comment._id%>/edit">Edit</a>
              <form id="commentDelete" action="/lakes/<%= lake._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger" >Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        <% })%>
        

        
      </div>
    </div>
  </div>
</div>



<% include ../partials/footer %>