<% include ../partials/headers %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">LiveLakes</p>
      <div class="list-group">
        <li class="list-group-item">Info 1</li>
        <li class="list-group-item active">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= lake.url %>" alt="">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href=""><%= lake.name %></a></h4>
          <p><%= lake.description %></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-primary" href="/lakes/<%= lake._id%>/comments/new">Add Comment</a>
        </div>
        <hr>
        <% lake.comments.forEach(comment => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author %></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
            </div>
          </div>
        <% })%>
        

        
      </div>
    </div>
  </div>
</div>



<% include ../partials/footer %>